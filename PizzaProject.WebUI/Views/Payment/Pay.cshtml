@model PizzaProject.WebUI.Dtos.Informations
<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~\paymentcss\stylesheet.css" rel="stylesheet" />
</head>

<body class="p-3 m-0 border-0 bd-example m-0 border-0" id="body">
    <div id="ortala">
        <form id=form asp-controller="Payment" asp-action="Pay">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Kart Sahibinin İsim Ve Soyadınızı Yazınız</label>
                <input name="AdSoyad" type="text" class="form-control" id="exampleFormControlInput1" placeholder="İsim Ve Soyadınızı Yazınız">
            </div>

            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Kart Numaranızı Giriniz</label>
                <input name="KartNo" type="text" class="form-control" id="exampleFormControlInput1" placeholder="xxxx xxxx xxxx xxxx">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Cvv No Giriniz</label>
                <input name="Cvv" type="text" class="form-control" id="exampleFormControlInput1" placeholder="***">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Kartınızın Son Kullanma Tarihi Ay Olarak Giriniz</label>
                <input name="Ay" type="text" class="form-control" id="exampleFormControlInput1" placeholder="00">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Kartınızın Son Kullanma Tarihi Yıl Olarak Giriniz</label>
                <input name="Yil" type="text" class="form-control" id="exampleFormControlInput1" placeholder="00">
            </div>
            
            <input name="Name" type="hidden" value="@Model.Name"/>
            <input name="Phone" type="hidden" value="@Model.Phone"/>
            <input name="Email" type="hidden" value="@Model.Email"/>
            <input name="Address" type="hidden" value="@Model.Address"/>

            <button type="submit" class="btn btn-success">Ödeme Yap</button>
        </form>
    </div>
</body>

</html>