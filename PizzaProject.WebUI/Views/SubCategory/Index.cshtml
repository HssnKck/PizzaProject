@model IEnumerable<PizzaProject.Model.Tables.SubCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Alt Kagetoriler</h1>

<div style="width: 300px;" class="list-group">
    <a asp-controller="Product" asp-action="AllListProduct" asp-route-id="@ViewBag.CategoryId" class="list-group-item list-group-item-action">Tüm @ViewBag.Category</a>
</div>

@foreach (var item in Model)
{
    <div style="width: 300px;" class="list-group">
        <a asp-controller="Product" asp-action="Index" asp-route-id="@item.ID" class="list-group-item list-group-item-action">@item.SubCategoryName</a>
    </div>
}
