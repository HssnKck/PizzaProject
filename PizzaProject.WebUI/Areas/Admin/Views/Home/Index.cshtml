@model IEnumerable<PizzaProject.Model.Tables.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1 style="text-align:center">Kategoriler</h1>
<a asp-area="Admin" asp-controller="Category" asp-action="Add" class="btn btn-primary">Yeni Kategori Ekle</a>


<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered verticle-middle">
                    <thead>
                        <tr>
                            <th scope="col">Tablo İsimleri</th>
                            <th scope="col">###</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="SubCategory" asp-action="Index" asp-route-id="@item.ID"><span class="label gradient-1 btn-rounded">Alt Kategorilere Git</span> </a>
                                </td>
                                <td>
                                    <span>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@item.ID" asp data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.ID" data-toggle="tooltip" data-placement="top" title="Close"><i class="fa fa-close color-danger"></i></a>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>